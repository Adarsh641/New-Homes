<% layout("/layouts/boilerplate") %>

<body>

<div class="container mt-4 mb-5">
    <h2 class="mb-4">Create a New Listing</h2>

    <form method="POST" action="/listings">

        <!-- Title -->
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input 
                type="text" 
                class="form-control"
                name="listing[title]" 
                placeholder="Add a catchy title"
                required>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea 
                class="form-control"
                name="listing[description]" 
                rows="3"
                required></textarea>
        </div>

        <!-- Image -->
        <div class="mb-3">
            <label class="form-label">Image Link</label>
            <input 
                type="text" 
                class="form-control"
                name="listing[image]" 
                placeholder="enter image URL/Link">
        </div>

        <!-- Price & Country -->
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Price</label>
                <input 
                    type="number" 
                    class="form-control"
                    name="listing[price]" 
                    placeholder="1200"
                    required>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Country</label>
                <input 
                    type="text" 
                    class="form-control"
                    name="listing[country]" 
                    placeholder="India"
                    required>
            </div>
        </div>

        <!-- Location -->
        <div class="mb-4">
            <label class="form-label">Location</label>
            <input 
                type="text" 
                class="form-control"
                name="listing[location]" 
                placeholder="Jaipur, Rajasthan"
                required>
        </div>

        <!-- Button -->
        <button class="btn btn-dark px-4">Add</button>

    </form>
</div>

</body>

